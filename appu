#!/usr/bin/env ruby

require '/usr/local/etc/appu/lib/helper'
require '/usr/local/etc/appu/lib/link'
require '/usr/local/etc/appu/lib/open'
require '/usr/local/etc/appu/lib/todo'
require '/usr/local/etc/appu/lib/search'
require '/usr/local/etc/appu/lib/web'
require '/usr/local/etc/appu/lib/process'
require '/usr/local/etc/appu/lib/filex'
require 'fileutils'
require 'colorize'


#todo
  # alias anytime
  # memo (tag-based)

operation = ARGV[0]
current_location = ""

def operate(operation)
  case operation
  when "qq"
    abort
  when "q"
    abort
  when "open", "o"
    exe_open
  when "help", "h", "?"
    exe_help
  when "book", "b"  # bookmark
    exe_book
  when "todo", "t"
    exe_todo
  when "link", "l"
    show_linkmenu
  when "web", "w" #webfind
    exe_web
  when "clean" #clean trash
    system("rm -rf ~/.Trash/*")
  when "renamefiles"
    exe_rename
  when "del"
    del
  when "kill", "k"
    exe_kill
  when "//"
    exe_search
  else
    help
  end
  bort
end

operate operation

